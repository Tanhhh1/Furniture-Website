@section Styles {
    <link rel="stylesheet" href="~/css/client/account.css" />
}

<section class="account_container">
    <div class="account_overlay">
        <div class="account_content">
            <div class="account_text">
                <h1>Xác minh địa chỉ email của bạn</h1>
                <p class="account_description">
                    Chúng tôi đã gửi mã xác minh đến email của bạn. Vui lòng nhập mã bên dưới để tiếp tục đặt lại mật khẩu.
                </p>
            </div>

            <div class="account_form">
                <h2>Nhập mã xác minh</h2>
                <form action="#">
                    <input type="text" placeholder="Nhập mã gồm 6 chữ số" maxlength="6" required>
                    <button type="submit">Xác minh mã</button>

                    <div class="account_links">
                        <a href="forgot.html" class="forgot_link">Gửi lại mã</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>