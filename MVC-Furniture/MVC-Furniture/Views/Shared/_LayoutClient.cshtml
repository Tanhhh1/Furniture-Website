<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/client/layout.css">
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>

<body>
    <header class="header">
        <nav>
            <div class="nav_logo"><a href="#">NovusHaus</a></div>
            <ul class="nav_links" id="nav-links">
                <li class="link"><a href="#">Home</a></li>
                <li class="link"><a href="#">Product</a></li>
                <li class="link"><a href="#">Blog</a></li>
                <li class="link"><a href="#">Contact</a></li>
                <li class="link"><a href="#">About</a></li>
            </ul>

            <div class="nav_menu_btn" id="menu-btn">
                <span><i class='bx bx-menu'></i></span>
            </div>

            <div class="nav_actions">
                <span><i class='bx bx-cart'></i> </span>
                <span><i class='bx bx-user'></i></span>
            </div>
        </nav>
    </header>

    @RenderBody()

    <footer class="footer">
        <div class="footer_container">
            <div class="footer_content">
                <h4>SUBSCRIBE TO GET THE LATEST NEWS ABOUT US</h4>
                <p>
                    We recommend you to subscribe to our newspaper. Enter your email to
                    get our daily updates about us
                </p>
            </div>
            <div class="footer_form">
                <form action="/">
                    <input type="text" placeholder="Enter your email" />
                    <button>Subscribe</button>
                </form>
            </div>
        </div>
        <div class="footer_bar">
            <div class="footer_logo">
                <h4><a href="#">NovusHaus</a></h4>
                <p>Copyright © 2023 Web Design Mastery. All rights reserved.</p>
            </div>
            <ul class="footer_nav">
                <li class="footer_link"><a href="#">About</a></li>
                <li class="footer_link"><a href="#">Category</a></li>
                <li class="footer_link"><a href="#">Product</a></li>
                <li class="footer_link"><a href="#">Blog</a></li>
                <li class="footer_link"><a href="#">About</a></li>
            </ul>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://unpkg.com/scrollreveal"></script>
    <script src="~/js/layout.js"></script>
</body>
</html>