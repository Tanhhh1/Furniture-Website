@section Styles {
    <link rel="stylesheet" href="~/css/client/contact.css" />
}

<section class="contact_container">
    <div class="map_container">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.003156924978!2d106.6259930748058!3d10.811857389343098!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752b3ecb6b40c3%3A0x5b6a3fba8e18a593!2zWHXhuq1uZyBTb2ZhIFTDoG0gVmnhu4d0!5e0!3m2!1svi!2s!4v1696347999017!5m2!1svi!2s"
                width="100%" height="350" style="border:0;" allowfullscreen="" loading="lazy">
        </iframe>
    </div>

    <div class="contact_content">
        <div class="contact_form">
            <h3>Gửi Tin Nhắn Cho Chúng Tôi</h3>
            <form>
                <input type="text" placeholder="Nhập tên của bạn" required>
                <input type="email" placeholder="Nhập địa chỉ email của bạn" required>
                <textarea rows="5" placeholder="Nhập nội dung" required></textarea>
                <button type="submit">Gửi tin nhắn →</button>
            </form>
        </div>

        <div class="contact_info">
            <h3>Chúng tôi ở đây</h3>
            <p>Hotline: <strong>0931.789.766</strong></p>
            <ul>
                <li>S3.03-Sh15 khu Sapphire | Vinhomes Smart City, Tây Mỗ, Hà Nội</li>
                <li>S2.09 khu Sapphire | Vinhomes Ocean Park, Gia Lâm, Hà Nội</li>
                <li>S05.03-S18 khu The Rainbow | Vinhomes Grand Park, P. Long Bình, TP.HCM</li>
            </ul>
        </div>
    </div>
</section>